<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/news_drawer_layout">
    <!-- Main Content View -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:id="@+id/news_linear_layout"
                android:background="@color/OHSLightBlue">
			<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/news_title"
					android:textStyle="bold"
					android:textColor="#000"
					android:textSize="30sp"
					android:id="@+id/news_title"
					/>
	        <ImageButton
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/news_refresh_button"
			        android:src="@drawable/ic_refresh"
			        android:onClick="onClick"/>
        </LinearLayout>
        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/news_scroll_view">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/news_article_list_view">
            </LinearLayout>
        </ScrollView>
	</LinearLayout>
    <!-- Drawer View -->
    <ListView
            android:id="@+id/news_drawer_list"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="2dp"
            android:background="@color/OHSLightBlue"/>
</android.support.v4.widget.DrawerLayout>